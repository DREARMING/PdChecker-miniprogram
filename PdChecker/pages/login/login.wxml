<!--pages/login/login.wxml-->
<view>
  <view>
    <text>后台登录</text>
  </view>
  <form >
    <view>
      <label>
        <text>账号：</text>
        <input type="text" placeholder='输入您的账号' bindinput='bindUsernameInput'></input>
      </label>
    </view>
    <view>
      <label>
        <text>密码：</text>
        <input type="password" placeholder='输入您的密码' bindinput='bindPasswordInput'></input>
      </label>
    </view>
    <button class="primary" form-type='submit' bindtap='login'>登录</button>
  </form>
</view>